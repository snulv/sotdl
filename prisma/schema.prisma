generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id     Int    @id @default(autoincrement())
  title  String
  exerpt String
}

model Character {
  id          Int         @id @default(autoincrement())
  name        String
  level       String
  ancestry    String
  novice_path String
  expert_path String
  master_path String
  updatedAt   DateTime @updatedAt @default(now())
  attributes  Attribute[]
}

model Attribute {
  id          Int       @id @default(autoincrement())
  name        String
  type        String    @default("Base")
  description String?
  value       Int       @default(0)
  max         Int       @default(0)
  current     Int       @default(0)
  characterId Int
  updatedAt   DateTime @updatedAt @default(now())
  character   Character @relation(fields: [characterId], references: [id])
}
